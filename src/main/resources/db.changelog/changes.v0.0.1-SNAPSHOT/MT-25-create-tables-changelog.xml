<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

<!--subjects table-->
    <changeSet author="maksim.ananev" id="create subjects table">

        <preConditions onFail="CONTINUE" onFailMessage="Table subjects already exists">
            <not>
                <tableExists tableName="subjects"/>
            </not>
        </preConditions>
        <createTable tableName="subjects">
            <column  name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="subject_name" type="varchar(50)">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>

<!--about_users table-->
    <changeSet author="maksim.ananev" id="create about_users table">

        <preConditions onFail="CONTINUE" onFailMessage="Table about_users already exists">
            <not>
                <tableExists tableName="about_users"/>
            </not>
        </preConditions>
        <createTable tableName="about_users">
            <column  name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="text_about_user" type="varchar(500)"/>
        </createTable>
    </changeSet>

<!--images-->
<!--    TODO отрефакторить чтобы сохранять картинки-->
    <changeSet author="maksim.ananev" id="create images table">

        <preConditions onFail="CONTINUE" onFailMessage="Table images already exists">
            <not>
                <tableExists tableName="images"/>
            </not>
        </preConditions>
        <createTable tableName="images">
            <column  name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="image_location" type="varchar(300)"/>
        </createTable>
    </changeSet>


<!--users-->
    <changeSet author="maksim.ananev" id="create user table">

        <preConditions onFail="CONTINUE" onFailMessage="Table users already exists">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users">
            <column  name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(30)"/>
            <column name="last_name" type="varchar(30)"/>
            <column name="age" type="varchar(5)"/>
            <column name="email" type="varchar(50)"/>
            <column name="password" type="varchar(255)">
            <constraints nullable="false"/>
            </column>
            <column name="image_id" type="bigint">
            <constraints foreignKeyName="fk__students__images" references="images(id)"
                          unique="true"/>
            </column>
            <column name="about_user" type="bigint">
                <constraints foreignKeyName="fk__students__about_users" references="about_users(id)"
                              unique="true"/>
            </column>
            <column name="user_role" type="varchar(25)"/>
        </createTable>
    </changeSet>

    <changeSet author="maksim.ananev" id="create users_subjects table">

        <preConditions onFail="CONTINUE" onFailMessage="Table users_subjects already exists">
            <not>
                <tableExists tableName="users_subjects"/>
            </not>
        </preConditions>
        <createTable tableName="users_subjects">
            <column  name="subject_id" autoIncrement="true" type="bigint">
                <constraints foreignKeyName="fk__users_subjects_subjects" references="subjects(id)"/>
            </column>
            <column  name="user_id" autoIncrement="true" type="bigint">
            <constraints foreignKeyName="fk__users_subjects_users" references="users(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>